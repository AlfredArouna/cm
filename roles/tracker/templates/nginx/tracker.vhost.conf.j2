upstream php {
  server unix:/run/php5-fpm-www.sock;
}

server_names_hash_bucket_size 64;

server {
  listen [::]:80;
  server_name tracker.c3voc.de;

  # don't allow access to some files or directories
  location ~* /.*\.(ht|sh|git|htaccess|inc|rb|py|pl|db|sqlite|sqlite3)$ {
    deny  all;
  }

  rewrite ^(.*) https://tracker.c3voc.de$1;
  return 301 https://tracker.c3voc.de$request_uri;
}

server {
  listen [::]:443;
  server_name tracker.c3voc.de;

  root /srv/www/cccongress/Public;

  client_max_body_size 20m;

  ssl_certificate       /etc/ssl/certs/tracker.c3voc.de.crt;
  ssl_certificate_key   /etc/ssl/private/tracker.c3voc.de.key;

  # don't allow access to some files or directories
  location ~* /.*\.(ht|sh|git|htaccess|inc|rb|py|pl|db|sqlite|sqlite3)$ {
    deny  all;
  }

  location ~ ^\/(downloads|css|images|thumbnails|javascript|fahrplan)\/ {
  	expires 120h; # 5 days
  }

  location /favicon.ico {
  	expires max;
  }

  location / {
    include /etc/nginx/fastcgi_params;
    fastcgi_pass php;
    # remove trailing slash
    rewrite ^(.+)/$ $1 permanent;
    rewrite ^(.*)$ /index.php$1 break;
  }
}
