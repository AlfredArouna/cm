[Unit]
Description = voctomix music-source
After = voctomix-voctocore.service
Requires = voctomix-voctocore.service

[Service]
Type = simple
ExecStart = /opt/voctomix/scripts/music-source-from-folder.py -vv /video/pause-music

Restart = always
StartLimitInterval = 60
StartLimitBurst = 10

[Install]
WantedBy = voctomix-voctocore.service
