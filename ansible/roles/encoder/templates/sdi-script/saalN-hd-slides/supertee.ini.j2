[system]
start = slides_native_slides slides_translated_slides slides_stereo_slides

[reader]
source = ${PIPEPATH}/${PIPE_INTERMEDIATE}
frameSize = 188000

[slides_native_slides]
command = ffmpeg -re -i - -map 0:0 -map 0:1 -c:v:0 copy -c:a:0 libfdk_aac -b:a 64k -ar 44100 -f flv rtmp://127.0.0.1:1935/stream/s{{ room_number }}_native_slides

[slides_translated_slides]
command = ffmpeg -re -i - -map 0:0 -map 0:2 -c:v:0 copy -c:a:0 libfdk_aac -b:a 64k -ar 44100 -f flv rtmp://127.0.0.1:1935/stream/s{{ room_number }}_translated_slides

[slides_stereo_slides]
command = ffmpeg -re -i - -map 0:0 -map 0:3 -c:v:0 copy -c:a:0 libfdk_aac -b:a 64k -ar 44100 -f flv rtmp://127.0.0.1:1935/stream/s{{ room_number }}_stereo_slides
